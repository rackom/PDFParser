<h1>Listing state_options</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Element</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @state_options.each do |state_option| %>
  <tr>
    <td><%= state_option.value %></td>
    <td><%= state_option.element %></td>
    <td><%= link_to 'Show', state_option %></td>
    <td><%= link_to 'Edit', edit_state_option_path(state_option) %></td>
    <td><%= link_to 'Destroy', state_option, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

